@using ItlaBankApp.Core.Application.ViewModels.User;
@model UserViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}



<div class="container-fluid d-flex align-items-center justify-content-center custom-height rounded" style="height:70vh">
    <div class="row rounded bg-transparent">
        <div class="custom-delete-card rounded border-0 box-shadow rounded-top shadow">
            <div class="custom-card-header p-2 bg-primary bg-gradient text-dark rounded-top">
                <h4 class="text-light display-6 m-2">¿Estás seguro que quieres eliminar el usuario '@Model.Username'?</h4>
            </div>
            <div class="custom-card-body rounded-bottom">
                <div class="d-flex justify-content-center rounded-bottom">
                    <form method="post" asp-controller="User" asp-action="DeletePost">
                        <input type="hidden" asp-for="Username" />
                        <div class="text-center m-2">
                            <input type="hidden" name="id" value="@Model.Username" />
                            <a asp-controller="Home" asp-action="Index" class="btn btn-warning ml-2">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>