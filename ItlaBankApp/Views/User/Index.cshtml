@using ItlaBankApp.Core.Application.ViewModels.User;
@using ItlaBankApp.Core.Application.Helpers;
@using ItlaBankApp.Core.Application.DTOs.Account;
@using Microsoft.AspNetCore.Http;
@model LoginViewModel;
@{
    ViewData["Title"] = "Iniciar Sesión";
}


@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@ViewBag.ErrorMessage</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["Error"] as string))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@ViewData["Error"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="height:78vh">
    <div class="row justify-content-center p-4">

        <div class="col-6 p-5 bg-primary bg-gradient d-flex flex-column justify-content-center align-items-center" style="border-radius:16px 0 0 16px; box-shadow: 0px 10px 30px rgba(0, 30, 137, 0.3);">
            <div>
                <h1 class="display-5 fw-bold fst-italic main-text text-center">ItlaBank</h1>
            </div>
        </div>

        <div class="col-6 p-5 login-container bg-gradient d-flex flex-column justify-content-center align-items-center">
            <form method="post" asp-controller="User" asp-action="Index">
                @if (Model.HasError)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <p>@Model.Error</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="mb-3 main-text">
                    <label asp-for="UserName" class="fw-bold main-text mb-2">Nombre de usuario</label>
                    <input class="form-control" asp-for="UserName">
                </div>
                <div class="mb-3 main-text">
                    <label asp-for="Password" class="fw-bold mb-2">Contraseña</label>
                    <input class="form-control" asp-for="Password">
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-outline-primary float-end me-2">Olvidé mi Contraseña</a>
                    <button type="submit" class="btn btn-primary me-2">Iniciar Sesión</button>
                </div>
            </form>
        </div>

    </div>
</div>